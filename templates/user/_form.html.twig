<h1 class="text-5xl p-20 text-center text-violet-400 font-bold mb-6">
    {{ button_label|default('Create / Edit User') }}
</h1>

<div class="text-xl flex justify-center">
    <div class="w-full max-w-xl">
        {{ form_start(form) }}

        {{ form_errors(form) }}

        <div class="mb-4">
            {{ form_label(form.lastname, null, {
                label_attr: { class: 'block mb-1 font-semibold' }
            }) }}
            {{ form_widget(form.lastname, {
                attr: {
                    class: 'w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-400'
                }
            }) }}
            {{ form_errors(form.lastname) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.firstname, null, {
                label_attr: { class: 'block mb-1 font-semibold' }
            }) }}
            {{ form_widget(form.firstname, {
                attr: {
                    class: 'w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-400'
                }
            }) }}
            {{ form_errors(form.firstname) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.email, null, {
                label_attr: { class: 'block mb-1 font-semibold' }
            }) }}
            {{ form_widget(form.email, {
                attr: {
                    class: 'w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-400'
                }
            }) }}
            {{ form_errors(form.email) }}
        </div>

        {# Mot de passe : souvent seulement en cr√©ation #}
        {% if form.password is defined %}
            <div class="mb-6">
                {{ form_label(form.password, null, {
                    label_attr: { class: 'block mb-1 font-semibold' }
                }) }}
                {{ form_widget(form.password, {
                    attr: {
                        class: 'w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-violet-400'
                    }
                }) }}
                {{ form_errors(form.password) }}
            </div>
        {% endif %}

        {{ form_end(form) }}
    </div>
</div>
