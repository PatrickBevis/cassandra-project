{% extends 'base.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block body %}
    <h1 class= "text-5xl p-20  text-center text-violet-400 font-bold">Customer index</h1>

<div class="text-xl text-center flex justify-center">
    <div class="  w-full  max-w-4xl">
        <table class="table-auto w-full ">
            <thead>
                <tr class="border-b">
                    <th class="py-2 px-4">Id</th>
                    <th class="py-2 px-4">Name</th>
                    <th class="py-2 px-4">Email</th>
                    <th class="py-2 px-4">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr class="border-b">
                    <td class="py-2 px-4">{{ customer.id }}</td>
                    <td class="py-2 px-4">{{ customer.name }}</td>
                    <td class="py-2 px-4">{{ customer.email }}</td>
                   <td class="py-2 px-4">
                     <div class="flex justify-center gap-6">
                         <a href="{{ path('app_customer_show', {'id': customer.id}) }}"
                         class="btn bg-white text-violet-700 border px-3 font-bold">
                         show
                         </a>
                         <a href="{{ path('app_customer_edit', {'id': customer.id}) }}"
                         class="btn bg-white text-violet-700 border px-3 font-bold">
                         edit
                         </a>
                     </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center  text-gray-500">
                        no records found
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
     <div class="mt-10  text-center">
            <a href="{{ path('app_customer_new') }}"
               class="btn bg-white text-violet-700 border border-rounded p-2 font-bold">
                Create new
            </a>
        </div>


   
{% endblock %}
