{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <h1 class="text-5xl p-20  text-center text-violet-400 font-bold">
    Customer {{customer.name}} 
</h1>

<div class=" text-xl flex justify-center">
    <div class=" max-w-2xl">
        <table class="table-auto w-full border-collapse">
            <tbody>
                <tr>
                    <th class="py-2 px-4 text-left font-semibold">Id</th>
                    <td class="py-2 px-4">{{ customer.id }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left font-semibold">Name</th>
                    <td class="py-2 px-4">{{ customer.name }}</td>
                </tr>
                <tr>
                    <th class="py-2 px-4 text-left font-semibold">Email</th>
                    <td class="py-2 px-4">{{ customer.email }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-10 flex justify-center gap-4">
            <a href="{{ path('app_customer_index') }}"
               class="btn bg-white text-violet-700 border px-3 font-bold">
                back to list
            </a>

            <a href="{{ path('app_customer_edit', {'id': customer.id}) }}"
               class="btn bg-white text-violet-700 border px-3 font-bold">
                edit
            </a>
            {{ include('customer/_delete_form.html.twig') }}
        </div>
    </div>
</div>


    

{% endblock %}
